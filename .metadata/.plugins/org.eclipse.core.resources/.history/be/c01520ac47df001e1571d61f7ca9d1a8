<script>
function check(){
	
	
	let frm = document.frm;
	
	let id = frm.id.value;
	let pw = frm.pw.value;
	
	if(id==""){
		alert("ID를 입력해 주세요");
		frm.id.focus();
	}else if(pw==""){
		alert("패스워드를 입력해 주세요");	
		frm.pw.focus();
	}else{
		frm.submit();
	}
		
		
	
	
}

</script>

</head>


<body>

<form name="frm" action="main.jsp" method="post">
	<div class="wrap">
		<div class="img_wrap"></div>
		<div class="login_wrap">
			<input type="text" placeholder="ID" name="id">
			<input type="text" placeholder="PW" name="pw">
			<button type="button" onclick="check()">로그인</button>
		</div>
	</div>
</form>
